<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingBottom="24dp"
    android:background="@drawable/mountain_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <!-- Profile Header -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Username Display -->
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/username"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_blue"
                    android:layout_marginBottom="8dp" />

                <!-- Check-in Days Display -->
                <TextView
                    android:id="@+id/tv_checkin_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/total_check_in_days"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray_blue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- My Status Title -->
        <TextView
            android:id="@+id/tv_my_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/my_status"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gray_blue"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_profile_header"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Mood Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_mood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#80FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tv_my_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="32dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_mood_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="30dp"
                    android:src="@drawable/ic_mood5"
                    android:contentDescription="@string/mood_icon" />

                <TextView
                    android:id="@+id/tv_mood_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_mood"
                    android:textSize="18sp"
                    android:textColor="@color/gray_blue"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Daily Check-in Title -->
        <TextView
            android:id="@+id/tv_daily_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/daily_check_in"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2d3436"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_mood"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Check-in Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_checkin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#80FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tv_daily_checkin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_in_message"
                    android:textSize="15sp"
                    android:textColor="@color/gray_blue"
                    android:layout_marginBottom="24dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal" />

                <!-- Check-in Button with ripple effect -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_checkin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/check_in"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/gray_blue"
                    android:layout_marginBottom="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="24dp"
                    app:rippleColor="#74b9ff" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="@string/logout"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#e84118"
            android:backgroundTint="#f8f9fa"
            app:cornerRadius="24dp"
            app:strokeColor="#e84118"
            app:strokeWidth="1dp"
            app:rippleColor="#ff7675"
            app:layout_constraintTop_toBottomOf="@id/card_checkin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
