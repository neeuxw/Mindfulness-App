<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorMindfulnessLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/mountain_background">

    <TextView
        android:id="@+id/colorInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_the_color"
        android:textSize="24sp"
        android:textColor="@color/gray_blue"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:id="@+id/colorOptionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/gray_blue"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/nextColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_color"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>
</LinearLayout>