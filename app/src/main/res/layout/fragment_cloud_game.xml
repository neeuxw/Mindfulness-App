<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountain_background"
    android:padding="16dp">

    <EditText
        android:id="@+id/worryEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="@string/enter_your_worry"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/releaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/worryEditText"
        android:layout_centerHorizontal="true"
        android:text="@string/release"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/mindfulnessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:text="@string/release_message"/>

    <RelativeLayout
        android:id="@+id/cloudContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
